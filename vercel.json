{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs20.x"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/public/assets/$1"
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "destination": "/public/$1"
    },
    {
      "source": "/admin",
      "destination": "/public/index.html"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/public/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/public/index.html"
    }
  ]
}