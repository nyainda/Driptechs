{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**", "shared/**"]
      }
    },
    {
      "src": "client/vite.config.ts",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public",
        "buildCommand": "npm run build",
        "installCommand": "npm install"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index.ts" },
    { "src": "/(.*)", "dest": "/dist/public/index.html" }
  ],
  "env": {
    "NODE_ENV": "production",
    "DATABASE_URL": "",
    "JWT_SECRET": "",
    "REACT_APP_EMAIL": "driptechs.info@gmail.com",
    "REACT_APP_PHONE": "+254111409454",
    "REACT_APP_WHATSAPP": "https://wa.me/254111409454"
  },
  "framework": "vite",
  "outputDirectory": "dist/public"
}