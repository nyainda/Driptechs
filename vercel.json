{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build && cd ../api && npm install",
  "outputDirectory": "client/dist",
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}